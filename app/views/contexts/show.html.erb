<div class="row">
  <div class="col-xl-1 order-xl-1" >
  </div>
  <div class="col-xl-10 order-xl-1" >
    <div class="card" >
      <%= image_tag @article.image_url if @article.image_url.present? %>
      <div class="card-body">
        <center>
          <h1 class="display-1 text-black">
            <%= @article.title %>
          </h1>
          <h5 class="card-title">
            <% if @article.tag.present? %>
              <%= "#" + @article.tag %>
            <% end %>
          </h5>
          <h5 class="card-title">
            <%# @article.pentime.to_formatted_s(:db) %>
            <%# Time.zone.parse(@article.pentime.to_s) %>
            <%= Time.zone.parse(@article.pentime.to_s).strftime("%Y-%m-%d %H:%M:%S")%>
          </h5>
        </center>
        <p class="card-text">
          <%# h(@article.context).gsub("\n", "<br>").html_safe %>
          <%# simple_format(@article.context)%>
          <%= raw @article.context %>
        </p>
        <div id="disqus_thread"></div>
        <script>
            var disqus_config = function () {
              this.language = "zh_TW";
            };
        (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://my-ykurey.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-3">
        <% if @previous != nil %>
          <%= link_to "上一篇", user_context_path(params[:user_id], @previous.slug), :class => "btn btn-outline-info" %>
        <% end %>
      </div>
      <div class="col-6">
      </div>
      <div class="col-3" style="text-align:right;">
        <% if @next != nil %>
          <%= link_to "下一篇", user_context_path(params[:user_id], @next.slug), :class => "btn btn-outline-info" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xl-1 order-xl-2 mb-5 mb-xl-0" >
  </div>
</div>
