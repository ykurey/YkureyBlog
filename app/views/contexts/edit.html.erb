<div class="row mt-5">
        <div class="col">
          <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
              <h3 class="text-white mb-0">Edit Context</h3>
            </div>
              <%= form_with model: @article, url: user_context_path do |f| %>
              <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                  <label style="color:white; font-size:1em;">標題</label>
                  <div class="form-group">
                    <%= f.text_field :title, :class => "form-control", :id => "title", :placeholder => "請輸入標題", :required => "required" %>
                  </div>
                  <label style="color:white; font-size:1em;">作者</label>
                  <div class="form-group">
                    <%= f.text_field :author, :class => "form-control", :id => "author", :placeholder => "請輸入作者", :required => "required" %>
                  </div>
                  <label style="color:white; font-size:1em;">標籤</label>
                  <div class="form-group">
                    <%= f.text_field :tag, :class => "form-control", :id => "tag", :placeholder => "請輸入標籤", :required => "required" %>
                  </div>
                  <label style="color:white; font-size:1em;">日期</label>
                  <div class="form-group">
<!--                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" name="date">-->
                  </div>
                  <label style="color:white; font-size:1em;">圖片</label>
                  <div class="form-group">
                    <%= f.file_field :image, id: :article_image, class: "form-control" %>
                  </div>
                  <label style="color:white; font-size:1em;">內容</label>
                  <div class="form-group">
                    <%# f.text_area :context, :class => "form-control form-control-alternative", :rows => "20", :placeholder => "Write a large text here ...", :required => "required" %>
                    <%# f.rich_text_area :context %>
                    <%= f.cktext_area :context, :class => "form-control form-control-alternative", :rows => "20", :placeholder => "Write a large text here ...", :required => "required" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit :class => "btn btn-primary", :value => "提交" %>
                  </div>
                </div>
                <div class="col-md-2">
                </div>
              </div>
              <% end %>
          </div>
        </div>
      </div>
