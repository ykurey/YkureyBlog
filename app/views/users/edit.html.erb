<div class="row">
  <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
    <div class="card card-profile shadow">
      <div class="row justify-content-center">
        <div class="col-lg-3 order-lg-2">
          <div class="card-profile-image">
            <!-- <a href="#"> -->
            <% if @userInformation.image.present? %>
              <%= image_tag @userInformation.image_url, :class => "rounded-circle" %>
            <% else %>
              <%= image_tag "penguin.jpg", :class => "rounded-circle" %>
            <% end %>
            <!-- </a> -->
          </div>
        </div>
      </div>
      <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
        <div class="d-flex justify-content-between">
          <!-- <a href="#" class="btn btn-sm btn-info mr-4">Connect</a> -->
          <!-- <a href="#" class="btn btn-sm btn-default float-right">Message</a> -->
        </div>
      </div>
      <div class="card-body pt-0 pt-md-4">
        <div class="row">
          <div class="col">
            <div class="card-profile-stats d-flex justify-content-center mt-md-5">
              <div>
                <span class="heading">22</span>
                <span class="description">Friends</span>
              </div>
              <div>
                <span class="heading">10</span>
                <span class="description">Photos</span>
              </div>
              <div>
                <span class="heading">89</span>
                <span class="description">Comments</span>
              </div>
            </div>
          </div>
        </div>
        <div class="text-center">
          <h3>
            <%= @userInformation.name %><span class="font-weight-light">, <%= @userInformation.birthday %></span>
          </h3>
          <div class="h5 font-weight-300">
            <i class="ni location_pin mr-2"></i><%= @userInformation.email %>
          </div>
          <div class="h5 mt-4">
            <i class="ni business_briefcase-24 mr-2"></i>Solution Manager - Creative Tim Officer
          </div>
          <div>
            <i class="ni education_hat mr-2"></i>University of Computer Science
          </div>
          <hr class="my-4" />
          <p>
            <% if @userInformation.about.present? %>
              <%= (truncate(strip_tags(@userInformation.about), length: 100)).html_safe %>
            <% else %>
              <%= "這個人很懶，什麼東西都沒有留下..."%>
            <% end %>
          </p>
          <%= link_to "查看更多...", user_path(@private_page_user.username) %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-8 order-xl-1">
    <div class="card bg-secondary shadow">
      <div class="card-header bg-white border-0">
        <div class="row align-items-center">
          <div class="col-8">
            <h3 class="mb-0">My account</h3>
          </div>
          <div class="col-4 text-right">
            <!-- <a href="#!" class="btn btn-sm btn-primary">儲存</a> -->
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= form_with model: @userInformation, url: user_path do |f| %>
          <h6 class="heading-small text-muted mb-4">資訊</h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label" for="input-username">姓名</label>
                  <%= f.text_field :name, :class => "form-control form-control-alternative", :id => "input-username", :placeholder => "姓名", :required => "required" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label" for="input-email">電子郵件</label>
                  <%= f.text_field :email, :class => "form-control form-control-alternative", :id => "input-email", :placeholder => "電子郵件", :required => "required" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label" for="input-first-name">生日</label>
                  <%= f.text_field :birthday, :class => "form-control form-control-alternative", :placeholder => "生日", :required => "required" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label" for="input-last-name">電話</label>
                  <%= f.text_field :phone, :class => "form-control form-control-alternative", :placeholder => "電話", :required => "required" %>
                </div>
              </div>
            </div>
          </div>
          <hr class="my-4" />
          <!-- Address -->
          <!-- <h6 class="heading-small text-muted mb-4">地址</h6> -->
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="form-control-label" for="input-address">住址</label>
                  <%= f.text_field :address, :class => "form-control form-control-alternative", :id => "input-address", :placeholder => "住址", :required => "required" %>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="form-control-label" for="input-address">封面照片</label>
                  <%= f.file_field :header_image, :class => "form-control form-control-alternative", :id => "input-image", :placeholder => "封面照片" %>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="form-control-label" for="input-address">個人照</label>
                  <%= f.file_field :image, :class => "form-control form-control-alternative", :id => "input-header_image", :placeholder => "個人照" %>
                </div>
              </div>
            </div>
          </div>
          <hr class="my-4" />
          <!-- Description -->
          <h6 class="heading-small text-muted mb-4">關於我</h6>
          <div class="pl-lg-4">
            <div class="form-group">
              <%= f.text_area :about, :class => "form-control form-control-alternative", :rows => "8", :placeholder => "關於我...", :required => "required" %>
            </div>
            <%= f.submit :class => "btn btn-primary", :value => "儲存" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
